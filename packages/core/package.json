{
  "name": "@ccradar/core",
  "version": "1.0.0",
  "description": "Core library for ccradar",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc -b",
    "dev": "tsc -b --watch",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest run --coverage",
    "test:coverage:watch": "vitest --coverage --watch",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@octokit/rest": "^22.0.0",
    "dotenv": "^16.4.7",
    "execa": "^9.6.0"
  },
  "devDependencies": {
    "@types/node": "^24.0.12"
  }
}
